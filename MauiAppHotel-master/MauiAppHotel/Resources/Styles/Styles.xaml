<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>

<!--
Este arquivo foi atualizado para corrigir o erro 'PrimaryDark not found'.
Como o 'Colors.xaml' foi alterado para o tema Halloween, este arquivo 'Styles.xaml'
foi ajustado para usar as novas cores (como 'Primary' para Laranja e 'Gray100' para o fundo).
(Esta é a versão com a tag de fechamento corrigida).
-->

<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Estilo da Página (define o fundo escuro) -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray100}" />
        <Setter Property="NavigationPage.HasNavigationBar" Value="False" />
    </Style>

    <!-- Estilo do Botão (Laranja) -->
    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource White}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- Estilo do Label (Texto Claro) -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>

    <!-- Outros controles -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
        <Setter Property="TitleColor" Value="{StaticResource Gray500}" />
    </Style>

    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <!-- Títulos (mantém o estilo original) -->
    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="FontFamily" Value="Kalam"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
    </Style>

    <Style x:Key="SubHeadline" TargetType="Label">
        <Setter Property="FontFamily" Value="Kalam"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="TextColor" Value="{StaticResource Gray900}" />
    </Style>

</ResourceDictionary>

