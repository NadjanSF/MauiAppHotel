<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--
    O ResourceDictionary foi alterado para refletir um tema "Halloween".
    A cor primária foi mudada para Laranja (Orange) e o fundo (Gray100) para um cinza escuro.
    As cores de texto (Gray900) foram alteradas para cores claras para dar contraste.
    -->

    <Color x:Key="Primary">#FF7F00</Color> <!-- Laranja (Abóbora) -->
    <Color x:Key="PrimaryDarkText">#FF7F00</Color>
    <Color x:Key="PrimaryLightText">#212121</Color>
    <Color x:Key="Secondary">#4B0082</Color> <!-- Roxo (Indigo) -->
    <Color x:Key="SecondaryDarkText">#4B0082</Color>
    <Color x:Key="SecondaryLightText">#FFFFFF</Color>

    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <Color x:Key="Gray100">#212121</Color> <!-- Fundo: Cinza Escuro (Quase Preto) -->
    <Color x:Key="Gray200">#333333</Color> <!-- Fundo dos Frames -->
    <Color x:Key="Gray300">#575757</Color>
    <Color x:Key="Gray400">#7B7B7B</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#C2C2C2</Color>
    <Color x:Key="Gray900">#E0E0E0</Color> <!-- Texto: Cinza Claro -->
    <Color x:Key="Gray950">#FFFFFF</Color> <!-- Texto: Branco -->

</ResourceDictionary>
